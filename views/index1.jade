extends layout

block content
  div(style="width:600px")
    each thing in things
      //p= reqPath
      a(href=`${reqPath}${encodeURIComponent(thing.title)}`)
        if thing.isFile
            p(style="font-size:24px;")= thing.title
        else if thing.isDirectory
          a(href=`${reqPath}${encodeURIComponent(thing.title)}`)
            p(style="font-size:24px;color:black;")= thing.title

